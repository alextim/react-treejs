{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/at-shared/data/blocks.json": ["../../packages/shared/data/blocks.json"],
      "@/at-shared/data/palettes.json": ["../../packages/shared/data/palettes.json"],
      "@/at-shared": ["../../packages/shared/src/index.ts"],
    },
  },
  "include": ["src", "../../packages/shared/src/**/*", "../../packages/shared/data/**/*"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
